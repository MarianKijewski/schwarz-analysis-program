{
  "name": "mail_test",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^3.0.0",
    "@sap-cloud-sdk/resilience": "^3.0.0",
    "@sap/cds": "^8",
    "express": "^4",
    "nodemailer": "^6.9.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1.11.1",
    "@sap/cds-dk": "^8",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-manage_orders": "cds watch --open manageorders/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "mail-service": {
        "kind": "rest",
        "credentials": {
          "destination": "my-email-destination"
        }
      }
    }
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/manage_orders"
  ]
}
